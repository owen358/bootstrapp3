

<h1>Pacientes</h1>

<table class="table">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Fecha</th>
      <th>Fecha de nacimiento</th>

      <th>Sexo</th>
      <th>Email</th>
      <th>Telefono</th>
      <th>Movil</th>
      <th>Profesion</th>
      <th>Altura</th>
      <th>Peso</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @formularios.each do |formulario| %>
      <tr>
        <td><%= formulario.nombre %></td>
        <td><%= formulario.fecha %></td>
        <td><%= formulario.FdN %></td>

        <td><% if formulario.sexo %>
        Mujer
        <% else %>
        Hombre
        <% end %></td>

        <td><%= formulario.email %></td>
        <td><%= formulario.telefono %></td>
        <td><%= formulario.movil %></td>
        <td><%= formulario.profesion %></td>
        <td><%= formulario.altura %></td>
        <td><%= formulario.peso %></td>

        <td><%= link_to 'Show', formulario %></td>
        <td><%= link_to 'Edit', edit_formulario_path(formulario) %></td>
        <td><%= link_to 'Destroy', formulario, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Formulario', new_formulario_path, class:"btn btn-info btn-lg" %>
